block variables
  - pageTitle = 'Hahahayabanan FSD 4-nd task demo page'
  - keywords = 'FSD, second task, frontend'
  - description = 'Страницы макета второго задания подготовки junior frontend разработчика'

doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="manifest" href="./favicons/site.webmanifest")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    block content
      include ./blocks/example/example.pug
      include ./blocks/particles-background/particles-background.pug
      
      main.sliders
        +particles-background()
        .sliders__element
          +example({ parameters: {
            min: 3, max: 199, step: 15, isRange: 'false', from: 59, hasTip: 'true',
          } })
        .sliders__element
          +example({ parameters: {
            min: 99, max: 199, step: 5, isRange: 'true', isVertical: 'true', from: 102, to: 159, hasTip: 'true',
          } })
        .sliders__element
          +example()
        .sliders__element
          +example({ 
            parameters: {
              min: 1000, max: 100000, step: 10, isRange: 'true', from: 20000, to: 63999, hasTip: 'true', hasLine: 'false',
            } 
          })

    
    